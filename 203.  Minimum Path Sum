class Solution {
    // private int min = Integer.MAX_VALUE;
    private int solve(int[][] arr, int row , int col , int[][] dp){

        if(row == 0 && col == 0){
            return dp[0][0] = arr[0][0];
        }
        if(row< 0 || col < 0){
            return (int)(1e9);
        }
        // sum+= arr[row][col];
        if(dp[row][col] != -1){
            return dp[row][col];
        }
        // if(row == arr.length -1 && col == arr[0].length-1){
        //     min = Math.min(min, sum);
        // }

        int up = arr[row][col] + solve(arr, row-1 , col , dp);
        int left =arr[row][col] + solve(arr, row, col-1 , dp); 

        return dp[row][col] = Math.min(up, left);    
        
    }
    public int minPathSum(int[][] grid) {
        int dp[][] = new int[grid.length +1][grid[0].length +1];
        for (int i = 0; i < grid.length; i++){
            Arrays.fill(dp[i], -1);
        }
        return solve(grid, grid.length -1 , grid[0].length -1 , dp);
    }
}
