class Solution {
    public int maxProduct(int[] nums) {
        int prefix = 1;
        int suffix = 1;
        int maxproduct = Integer.MIN_VALUE;
        for(int i=0;i<nums.length;i++){


            if(prefix == 0){
                prefix = 1;
            }

            if(suffix == 0){
                suffix = 1;
            }

            suffix = suffix * nums[nums.length - i -1];
            
            prefix = prefix * nums[i];
            maxproduct = Math.max(maxproduct, Math.max(prefix, suffix));

        }
        return maxproduct;
    }
}
