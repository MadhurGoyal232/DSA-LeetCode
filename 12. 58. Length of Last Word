import java.io.*;
import java.util.*;
class Solution {
    public int lengthOfLastWord(String s) {

                                    //    String a = s.replace("  ","");
                                        
                                        // if(a.charAt(a.length() -1) == ' '){
                                                // a= a.replace(a.charAt(a.length() -1) , "");
                                               
                                                
                                            // }

         s = s.trim();

        int count = 0;
        for(int i = s.length()-1; i>=0;i--){
            
            
            if(s.charAt(i) == ' '){
                break;
            }
            count++;

        }
        return count;


        
    }
}
