class Solution {

    public int maxLoot(int nums[] , int idx, int dp[] , int end){
        if(idx>end){
            return 0;
        }
        if(dp[idx]!=-1){

            return dp[idx];
        }
        int max = nums[idx] + maxLoot(nums , idx+2 , dp , end);
        int steal = maxLoot(nums , idx+1 , dp , end);

        return dp[idx] = Math.max(max,steal);
    
    }

    public int rob(int[] nums) {

        if(nums.length == 1){
            return nums[0];
        }
        if(nums.length == 2){
            return Math.max(nums[0] , nums[1]);
        }
        int dp[] = new int[nums.length];
        Arrays.fill(dp,-1);
        int a = maxLoot(nums, 0, dp , nums.length-2);
        Arrays.fill(dp,-1);
        int b = maxLoot(nums, 1, dp , nums.length-1);

        return Math.max(a,b);   
        
    }
}
