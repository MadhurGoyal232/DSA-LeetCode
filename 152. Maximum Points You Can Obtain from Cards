class Solution {
    public int maxScore(int[] cardPoints, int k) {
        int n = cardPoints.length;
        int sum = 0;
        int maxSum = 0;
        for(int i=0;i<k;i++){

            sum+= cardPoints[i];
        }
        int i = k-1;
        maxSum = Math.max(sum,maxSum);
        int r = 0;

        for(int j=0;j<k;j++){
            sum = sum-cardPoints[k-1-j] + cardPoints[n-1-j];
            maxSum = Math.max(sum,maxSum);
        }

        return maxSum;
    }   
}
