class Solution {
    public int numSubarraysWithSum(int[] nums, int goal) {
        
        HashMap<Integer, Integer> map = new HashMap<>();
        int count = 0;
        map.put(0,1);
        int sum = 0;
        for(int num: nums){

            sum+= num;
            if(map.containsKey(sum- goal)){
                count+= map.get(sum-goal);
            }

            if(map.containsKey(sum)){
                map.put(sum, map.get(sum) +1);
            }else{
                map.put(sum ,1);
            }
        }
        return count;
    }
}
