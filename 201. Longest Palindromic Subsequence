class Solution {
    public int recur(int i, int j , String text1, String text2 , int dp[][]){

       if(i==0 || j ==0){
            dp[i][j] = 0;
            return 0;
       }

       if(text1.charAt(i-1) == text2.charAt(j-1)){
            dp[i][j] = 1 + recur(i-1,j-1, text1, text2 , dp);
            return dp[i][j];
       }

       if(dp[i][j] != -1){
            return dp[i][j];
       }

       int pick1 = recur(i-1, j ,text1, text2 , dp);
       int pick2 = recur(i, j-1 ,text1, text2 , dp);

       return dp[i][j] = Math.max(pick1, pick2);

    }

    public int longestPalindromeSubseq(String s) {
        int n = s.length();
        StringBuilder sb = new StringBuilder(s);
        String r = sb.reverse().toString();
        int m = r.length();
        int dp[][] = new int[n+1][m+1];
        for(int i=0;i<n+1;i++){
            Arrays.fill(dp[i] , -1);
        }
        return recur(n,m,s,r , dp);
    }
}
