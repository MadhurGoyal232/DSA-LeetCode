class Solution {
    
    int count;
    int ans;

    public int kthSmallest(TreeNode root, int k) {
        count = 0;
        ans = -1;
        inorder(root, k);
        return ans;
    }

    void inorder(TreeNode root, int k) {
        if (root == null) return;

        inorder(root.left, k);

        count++;
        if (count == k) {
            ans = root.val;
            return;
        }

        inorder(root.right, k);
    }
}
