class Solution {
    public int recur( int amount , int[] coins, int index, int dp[][]){

        if(index == 0){

            if(amount % coins[index] == 0){
                return 1;
            }else{
                return 0;
            }
        }
        if(dp[index][amount] != -1){
            return dp[index][amount];
        }
        int pick = 0;
        if (coins[index] <= amount){

            pick =  recur(amount - coins[index] , coins, index , dp );
        }
        int noPick = recur(amount ,coins , index -1 , dp);

        return dp[index][amount] = pick + noPick;
    }
    public int change(int amount, int[] coins) {
        int n = coins.length;
        int dp[][] = new int[n][amount +1];

        for(int i=0;i<n;i++){
            Arrays.fill(dp[i] , -1);
        }
        int res = recur(amount , coins, n-1 ,dp);
        return res;
    }
}
