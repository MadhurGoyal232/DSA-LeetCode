class Solution {
    public int[] topKFrequent(int[] nums, int k) {
        HashMap<Integer, Integer> map = new HashMap<>();
        int arr[] = new int[k];

        for (int num : nums) {
            map.put(num, map.getOrDefault(num, 0) + 1);
        }

        // ✅ Step 2: Use a Max Heap (PriorityQueue) to store key-value pairs sorted by frequency
        PriorityQueue<Map.Entry<Integer, Integer>> pq =
            new PriorityQueue<>((a, b) -> b.getValue() - a.getValue()); // Max Heap

        // ✅ Step 3: Add all entries (key-value pairs) to the heap
        pq.addAll(map.entrySet());

        // ✅ Step 4: Extract the top K frequent elements
        for (int i = 0; i < k; i++) {
            arr[i] = pq.poll().getKey(); // ✅ Extract the key (number), not the frequency
        }

        return arr;
    }

    class Solution {
    public int[] topKFrequent(int[] nums, int k) {

        // Step 1: Count frequency
        HashMap<Integer, Integer> map = new HashMap<>();
        for (int num : nums) {
            map.put(num, map.getOrDefault(num, 0) + 1);
        }

        // Step 2: Min Heap based on frequency
        PriorityQueue<int[]> minHeap = new PriorityQueue<>(
            (a, b) -> a[1] - b[1]
        );

        // Step 3: Push elements into heap
        for (int key : map.keySet()) {
            minHeap.add(new int[]{key, map.get(key)});
            if (minHeap.size() > k) {
                minHeap.poll();
            }
        }

        // Step 4: Extract keys from heap
        int[] result = new int[k];
        for (int i = k - 1; i >= 0; i--) {
            result[i] = minHeap.poll()[0];
        }

        return result;
    }
}

}
