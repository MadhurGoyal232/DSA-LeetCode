/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {

    private int count = 0;
    public void helper(TreeNode root){

        if(root == null){
            return;
        }else{
            count++;
        }

        // if(root.left == null && root.right == null){
        //     x++;
        //     return;
        // }else{
        //     x++;
        // }

        helper(root.left );
        helper(root.right );

    }
    public int countNodes(TreeNode root) {
        if(root == null){
            return 0;
        } 
        // int x = 0;
        helper(root );
        return count;
    }
}
