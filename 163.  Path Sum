/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {

    public boolean isPath(TreeNode root, int targetSum, int currentSum){

        if(root == null){
            return false;
        }

        currentSum+= root.val;

        if(root.left == null && root.right == null){
            return targetSum== currentSum;
        }

        boolean left = isPath(root.left, targetSum,currentSum);
        boolean right = isPath(root.right, targetSum,currentSum);

        return left|| right;

    }
    public boolean hasPathSum(TreeNode root, int targetSum) {
        
        if(root == null){
            return false;
        }

        return isPath(root,targetSum, 0);
    }
}
